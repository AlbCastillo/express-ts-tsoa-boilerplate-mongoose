{
	"name": "express-typescript-tsoa-boilerplate",
	"version": "1.0.0",
	"description": "Boilerplate to build Express API REST quickly",
	"scripts": {
		"dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
		"clean:routes": "rimraf src/tsoa_generated coverage build tmp",
		"clean:modules": "rimraf node_modules",
		"clean:all": "yarn clean:modules && yarn clean:routes",
		"prebuild": "tsoa spec-and-routes && yarn lint:fix ",
		"build": "tsc -p tsconfig.json",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"test": "jest --forceExit --detectOpenHandles",
		"test:integration": "jest --watchAll --testPathPattern=tests/integrations --forceExit",
		"test:unit": "jest --watchAll --testPathPattern=tests/units",
		"prepare:husky": "yarn husky install",
		"plop:module": "plop module"
	},
	"author": "Alberto Castillo",
	"license": "MIT",
	"devDependencies": {
		"@tsconfig/node14": "^1.0.3",
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/lodash": "^4.14.195",
		"@types/mongoose": "^5.11.97",
		"@types/mongoose-unique-validator": "^1.0.7",
		"@types/morgan": "^1.9.4",
		"@types/node": "^20.2.5",
		"@types/supertest": "^2.0.12",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"concurrently": "^8.1.0",
		"eslint": "^8.41.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-unused-imports": "^2.0.0",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"nodemon": "^2.0.22",
		"plop": "^3.1.2",
		"prettier": "^2.8.8",
		"rimraf": "^5.0.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.3"
	},
	"dependencies": {
		"@tsoa/runtime": "^5.0.0",
		"@types/helmet": "^4.0.0",
		"D": "^1.0.0",
		"cors": "^2.8.5",
		"dotenv": "^16.1.3",
		"express": "^4.18.2",
		"global": "^4.4.0",
		"helmet": "^7.0.0",
		"jsonwebtoken": "^9.0.0",
		"lodash": "^4.17.21",
		"mongoose": "^7.2.2",
		"morgan": "^1.10.0",
		"reflect-metadata": "^0.1.13",
		"serialize-error": "^11.0.0",
		"swagger-ui-express": "^4.6.3",
		"tsoa": "^5.1.1",
		"tsyringe": "^4.7.0",
		"uuid": "^9.0.0",
		"winston": "^3.9.0"
	}
}